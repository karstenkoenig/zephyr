# CAN + MCP2515 config
CONFIG_SPI=y
CONFIG_CAN=y
CONFIG_CAN_DEV="MCP2515"
CONFIG_CAN_INIT_PRIORITY=80
CONFIG_CAN_1=y
CONFIG_CAN_MCP2515=y
CONFIG_CAN_MCP2515_INT_PORT_NAME="GPIOB"
CONFIG_CAN_MCP2515_INT_PIN=4
# Board configuration
CONFIG_GPIO_LED_DEV="GPIOB"
CONFIG_PIN_LED_1=7
CONFIG_GPIO_BUTTON_DEV="GPIOC"
CONFIG_PIN_USER_BUTTON=13
# enable log to see any issues
CONFIG_SYS_LOG=y
CONFIG_SYS_LOG_DEFAULT_LEVEL=1
CONFIG_SYS_LOG_OVERRIDE_LEVEL=1
CONFIG_SYS_LOG_CAN_LEVEL=1
